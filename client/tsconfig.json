{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "types": ["vite/client"],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true, // ðŸ‘ˆ Toegevoegd voor Vite
    "baseUrl": ".",          // ðŸ‘ˆ Handig voor absolute imports
    "paths": {
      "@/*": ["./src/*"]     // ðŸ‘ˆ Optioneel: aliassen voor imports
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}